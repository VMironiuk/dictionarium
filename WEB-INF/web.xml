<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD
  Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app>
  <servlet>
    <servlet-name>index</servlet-name>
    <servlet-class>com.myroniuk.IndexServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>com.myroniuk.RegisterServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.myroniuk.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>newaccount</servlet-name>
    <servlet-class>com.myroniuk.NewAccountServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>newaccount</servlet-name>
    <url-pattern>/newaccount</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>account</servlet-name>
    <servlet-class>com.myroniuk.AccountServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>account</servlet-name>
    <url-pattern>/account</url-pattern>
  </servlet-mapping>
</web-app>
